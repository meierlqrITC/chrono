<main class="w-full flex">
  <div
    class="relative flex-1 hidden items-center justify-center h-screen lg:flex" style="background-color:rgb(10,88,147)"
  >
    <div class="relative z-10 w-full max-w-md ">
      <%= image_tag "ChronoCrew.jpg", alt: "Das Logo von ChronoCrew", class: "" %>
    </div>
    <div
      class="absolute inset-0 my-auto h-[500px]"
      style="
      background: radial-gradient(
        circle 560px,
          #FFFFFF 0%, #FFFFFF 50%,
          rgba(192, 132, 252, 0) 50.1%
        );
        filter: blur(0px);
      "
    ></div>
  </div>
  <div class="flex-1 flex items-center justify-center h-screen">
    <div
      class="w-full max-w-md space-y-8 px-4 bg-white text-gray-600 sm:px-0"
    >
      <div class="">

        <div class="mt-5 space-y-2 pb-4">
          <h3 class="text-gray-800 text-2xl font-bold sm:text-3xl text-center">
            ChronoCrew-Prototyp
          </h3>
        </div>
        <div class="relative pb-4">
          <span class="block w-full h-px bg-gray-300"></span>
          <p
            class="inline-block w-fit text-sm bg-white px-2 absolute -top-2 inset-x-0 mx-auto"
          >
            Registrierung
          </p>
        </div>
        <div>
          Die Zugangsdaten erhalten Sie von Ihrer Hochschule!
          <div class="text-center"></div>
        </div>
      </div>
      <div class="relative">
        <span class="block w-full h-px bg-gray-300"></span>
        <p
          class="inline-block w-fit text-sm bg-white px-2 absolute -top-2 inset-x-0 mx-auto"
        >
          Anmeldung
        </p>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "space-y-5"}) do |f| %>
        <div class="field">
          <%= f.label :email, class: "font-medium" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full mt-2 px-3 py-2 text-gray-500 bg-transparent outline-none border focus:border-indigo-600 shadow-sm rounded-lg" %>
        </div>

        <div class="field">
          <%= f.label :passwort, class: "font-medium"  %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full mt-2 px-3 py-2 text-gray-500 bg-transparent outline-none border focus:border-indigo-600 shadow-sm rounded-lg" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me, class: "font-medium"  %>
            <%= f.label :Angemeldet_bleiben %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Anmelden", class: "w-full px-4 py-2 text-white font-medium bg-indigo-600 hover:bg-indigo-500 active:bg-indigo-600 rounded-lg duration-150" %>
        </div>
      <% end %>


    </div>
  </div>
</main>